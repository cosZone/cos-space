---
import HomeSider from '@components/layout/HomeSider.astro';
import PostFooter from '@components/post/PostFooter.astro';
import PostList from '@components/post/PostList.astro';
import Cover from '@components/ui/cover/Cover.astro';
import { seoConfig } from '@constants/site-config';
import Layout from '@layouts/Layout.astro';
import TwoColumnLayout from '@layouts/TwoColumnLayout.astro';
import { getSortedPosts } from '@lib/content';
import type { Page } from 'astro';
import type { BlogPost } from 'types/blog';

const allPosts = await getSortedPosts();
const posts = allPosts.slice(0, 10); // 首页显示前10篇

const page: Page<BlogPost> = {
  data: posts,
  start: 0,
  end: Math.min(9, posts.length - 1),
  size: 10,
  total: allPosts.length,
  currentPage: 1,
  lastPage: Math.ceil(allPosts.length / 10),
  url: {
    current: '/',
    prev: undefined,
    next: allPosts.length > 10 ? '/posts/2' : undefined,
    first: '/',
    last: `/posts/${Math.ceil(allPosts.length / 10)}`,
  },
};
---

<Layout title={seoConfig.title}>
  <TwoColumnLayout>
    <Cover slot="cover" />
    <HomeSider slot="sider" />
    <div class="shadow-box bg-gradient-start tablet:shadow-none flex flex-col gap-4 overflow-hidden p-4 pt-8 md:px-1 md:py-2">
      <PostList posts={posts} page={page} showPaginator={true} baseUrl="/posts" isHomePage={true} />
    </div>
    <PostFooter />
  </TwoColumnLayout>
</Layout>
