---
import { cn } from '@lib/utils';
import { MAX_WIDTH } from '@constants/layout';
import PostFooter from '@/components/post/PostFooter.astro';
import Footer from '@/components/layout/Footer.astro';
import type { BlogPost } from 'types/blog';

interface Props {
  className?: string;
  post?: BlogPost;
}

const { className, post } = Astro.props;
---

<div class="flex flex-col">
  <slot name="cover" />
  <div class={cn('mx-auto md:mx-0 flex w-full items-start justify-center md:w-full', MAX_WIDTH.content, className)}>
    <slot name="sider" />
    <div class="flex min-w-0 grow flex-col gap-8 md:w-full">
      <slot />
      <PostFooter post={post} />
      <Footer />
    </div>
  </div>
</div>
